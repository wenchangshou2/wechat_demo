/* pages/index/index.wxss */

.bottom {
  position: fixed;
  bottom: 0px;
  width: 100%;
  height: 5%;
  background: #38209a;
  border-radius: 30px 30px 0px 0px;
  z-index: 100;
}

.bottom-circle {
  height: 120px;
  width: 120px;
  background: #38209a;
  border-radius: 60px;
  margin: 0 auto;
  position: relative;
  top: -20px;
}

.contact {
  display: flex;
  /* flex-direction: row-reverse; */
  /* justify-content: center; */
  flex-wrap: wrap;
}
.scroll-view_H{
 height:100%;
  width:100%;
}
.content {
  width: 40%;
  height: 200px;
  margin-bottom: 20px;
  background: red;
  margin-left: 5%;
  position: relative;
  border-radius: 0px 0px 10px 10px;
  /* border:1px solid #38209a; */
}
.content-canvas{
  position: absolute;
  width:80%;
  height:70%;
  background: blue;
  margin-left: 10%;
  margin-top: 10%;
  
}
.content-avatar{
  position: absolute;
  border-radius: 12px;
  margin-left: 5%;
  top:50%;
  margin-top: -12px;
}
.content-bottom{
  position: absolute;
  height:30px;
  width:100%;
  border-radius: 0px 0px 10px 10px;
  background: green;
  bottom: 0;
}
.recommend{
  position: absolute;
  z-index: 99; 
  width:24px;
  height:23px;
  right:10px;

}
.content-like{
  position: absolute;
  right:10px;
  top:50%;
  margin-top: -16px;
}
.content-like label{
  font-size: 14px;
  margin-left: 2px;
}
.content .play{
  position: absolute;
  margin-top: -16px;
  top:50%;
  left:50%;
  margin-left:-16px;
  z-index: 99; 
}

.bottom-index {
  color: #1e79be;
  font-size: 14px;
  text-align: center;
  width: 40%;
  position: relative;
  top: 50%;
  margin-top: -7px;
}

.bottom-me {
  color: #1e79be;
  font-size: 14px;
  text-align: center;
  width: 40%;
  position: absolute;
  right: 0;
  top: 50%;
  margin-top: -7px;
}

.bottom-edit-button {
  height: 40px;
  width: 40px;
  position: absolute;
  background: #00e4ea;
  border-radius: 20px;
  margin-left: 50%;
  left: -20px;
  margin-top: 5px;
}
